<%- include('partials/header') %>

<body class="text-center ajasko-main-body">
  <main class="form-signin">
    <form action="/weather" method="post">
      <i class="fas fa-umbrella"></i>
      <h1 class="h3 mb-3 fw-normal">Check the Weather App</h1>

      <div class="form-floating">
        <input id="locationName" type="text" class="form-control top-box-onebox" name="location" required autofocus>
        <label for="locationName">Location:</label>
        <button class="w-100 btn btn-lg btn-primary" type="submit" name="checkWeather">Check Weather</button>

        <p class="mt-5 mb-3 text-muted"><%- include('partials/copyright') %></p>
      </div>
    </form>
  </main>
</body>

